<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="77dp"
            android:layout_height="77dp"
            tools:src="@mipmap/ic_launcher" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black_light"
                        android:textSize="20sp"
                        tools:text="Google Play" />

                    <TextView
                        android:id="@+id/text_isnew"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:textColor="#2baf2b"
                        android:textSize="15sp"
                        tools:text="最新" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="@dimen/content_detail_title_height"
                        android:layout_height="wrap_content"
                        android:text="Package:"
                        android:textColor="@color/text_black_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_package_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="com.xx.xxx"
                        android:textColor="@color/text_black_gray_dark"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="@dimen/content_detail_title_height"
                        android:layout_height="wrap_content"
                        android:text="Version:"
                        android:textColor="@color/text_black_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black_gray_dark"
                        android:textSize="15sp"
                        tools:text="1.6" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="@dimen/content_detail_title_height"
                        android:layout_height="wrap_content"
                        android:text="Build:"
                        android:textColor="@color/text_black_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_build"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black_gray_dark"
                        android:textSize="15sp"
                        tools:text="10" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="@dimen/content_detail_title_height"
                        android:layout_height="wrap_content"
                        android:text="Update:"
                        android:textColor="@color/text_black_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_update_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black_gray_dark"
                        android:textSize="15sp"
                        tools:text="2017/09/26 14:27:22" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="@dimen/content_detail_title_height"
                        android:layout_height="wrap_content"
                        android:text="Size:"
                        android:textColor="@color/text_black_gray"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:text="10.4Mb"
                        android:textColor="@color/text_black_gray_dark"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_setup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:background="#2baf2b"
                        android:clickable="true"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="5dp"
                        android:text="安装"
                        android:textColor="@android:color/white"
                        android:textSize="15sp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="应用介绍"
        android:textColor="@color/text_black_light"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black_gray_dark"
        android:textSize="17sp"
        tools:text="sdsdsds" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/line" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更新说明"
        android:textColor="@color/text_black_light"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text_update_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black_gray_dark"
        android:textSize="17sp"
        tools:text="sdsdsdssdsadsads" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/line" />

    <TextView
        android:id="@+id/text_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="历史版本"
        android:textColor="@color/text_black_light"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/ll_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>